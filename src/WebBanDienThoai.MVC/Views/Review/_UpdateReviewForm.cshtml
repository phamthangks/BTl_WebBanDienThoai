@model BTLW_BDT.Models.DanhGium

<div class="review-form mb-4">
    <h4>Cập nhật đánh giá</h4>
    <form id="updateReviewForm">
        <input type="hidden" name="maSanPham" value="@Model.MaSanPham" />
        <input type="hidden" id="selectedRate" value="@Model.Rate" />
        
        <div class="d-flex my-3">
            <p class="mb-0 mr-2">Đánh giá của bạn:</p>
            <div class="text-primary star-rating">
                @for (int i = 1; i <= 5; i++)
                {
                    <i class="@(i <= Model.Rate ? "fas" : "far") fa-star" data-rate="@i"></i>
                }
            </div>
        </div>
        
        <div class="form-group">
            <label for="content">Nội dung đánh giá:</label>
            <textarea id="content" class="form-control" rows="5" required>@Model.NoiDung</textarea>
        </div>
        
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <button type="button" class="btn btn-danger" onclick="deleteReview('@Model.MaSanPham')">Xóa đánh giá</button>
        </div>
    </form>
</div> 