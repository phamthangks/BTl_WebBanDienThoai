@model BTLW_BDT.ViewModels.ReviewFormViewModel

<div class="mb-4">
    <h4>Viết đánh giá của bạn</h4>
    <form id="reviewForm" onsubmit="handleReviewSubmit(event)">
        <input type="hidden" name="maSanPham" value="@Model.MaSanPham" />
        
        <div class="d-flex my-3">
            <p class="mb-0 mr-2">Đánh giá * :</p>
            <div class="star-rating">
                @for (int i = 1; i <= 5; i++)
                {
                    <i class="far fa-star" data-rate="@i" style="cursor: pointer;"></i>
                }
            </div>
            <input type="hidden" id="selectedRate" name="rate" value="5" />
        </div>

        <div class="form-group">
            <label for="reviewContent">Nội dung đánh giá *</label>
            <textarea id="reviewContent" 
                      name="noiDung"
                      class="form-control" 
                      rows="5" 
                      required 
                      placeholder="Nhập đánh giá của bạn về sản phẩm..."></textarea>
        </div>

        <div class="form-group mb-0">
            <button type="submit" class="btn btn-primary px-3">
                <i class="fas fa-paper-plane"></i> Gửi đánh giá
            </button>
        </div>
    </form>
</div> 