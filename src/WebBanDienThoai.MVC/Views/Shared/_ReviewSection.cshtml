@model BTLW_BDT.ViewModels.ProductDetailViewModel

<div class="row">
    <div class="col-12">
        @if (string.IsNullOrEmpty(Context.Session.GetString("Username")))
        {
            <div class="alert alert-warning w-100">
                <i class="fas fa-exclamation-circle"></i>
                Vui lòng <a href="@Url.Action("Login", "Access")">đăng nhập</a> để đánh giá sản phẩm.
            </div>
        }
        else
        {
            <div id="reviewFormContainer" class="w-100">
                <!-- Form đánh giá sẽ được load động -->
            </div>
        }
    </div>
    <div class="col-12">
        <div id="reviewsContainer" class="w-100">
            <!-- Danh sách đánh giá sẽ được load động -->
        </div>
    </div>
</div> 