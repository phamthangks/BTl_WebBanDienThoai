@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model BTLW_BDT.ViewModels.ChangePasswordVM

<div class="container my-5">
    <h2 class="text-center mb-4">Đổi Mật Khẩu cho @Context.Session.GetString("MaNhanVien")</h2>
    <hr />

    <!-- Thông báo thành công -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    <!-- Thông báo lỗi -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="ChangePassword" asp-controller="HomeAdmin" method="POST" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Mật Khẩu Hiện Tại -->
                <div class="form-group mb-3">
                    <label asp-for="CurrentPassword" class="form-label fw-bold">Mật Khẩu Hiện Tại</label>
                    <input asp-for="CurrentPassword" class="form-control" type="password" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>

                <!-- Mật Khẩu Mới -->
                <div class="form-group mb-3">
                    <label asp-for="NewPassword" class="form-label fw-bold">Mật Khẩu Mới</label>
                    <input asp-for="NewPassword" class="form-control" type="password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <!-- Xác Nhận Mật Khẩu Mới -->
                <div class="form-group mb-3">
                    <label asp-for="ConfirmNewPassword" class="form-label fw-bold">Xác Nhận Mật Khẩu Mới</label>
                    <input asp-for="ConfirmNewPassword" class="form-control" type="password" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>

                <!-- Nút Lưu -->
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>